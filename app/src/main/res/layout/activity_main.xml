<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/music2"/>

    <TextView
        android:id="@+id/txt1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EverGreen Music Academy"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:paddingBottom="8dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:textSize="27sp"/>

    <TextView
        android:id="@+id/txt8"
        android:text="Music speaks When word fails!"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/material_dynamic_neutral_variant90"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp" />


    <TextView
        android:id="@+id/txt2"
        android:text="Learn at your own peace! Designed for adults and chlidren pursuing guitar as a hobby, to be causal performer or a Pro!"
        android:textSize="18sp"
        android:textColor="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant90"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp" />

    <RelativeLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant90"
        android:paddingTop="5dp">

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 HSR Layout, Sadashiv Peth, Teachers colony, Dharashiv - 314509"
        android:textSize="18sp"
        android:layout_toEndOf="@id/txt6"
        android:paddingStart="3dp"
        android:paddingEnd="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant90"
        android:paddingTop="5dp">

    <TextView
        android:id="@+id/txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingStart="16dp"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="musicacademy@evergreen.in"
        android:textSize="18sp"
        android:paddingStart="3dp"
        android:paddingEnd="16dp"
        android:layout_toEndOf="@id/txt7"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant90"
        android:paddingTop="5dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/txt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 AM To 9 PM"
            android:paddingStart="3dp"
            android:textSize="18sp"
            android:layout_toEndOf="@id/txt5"/>
    </RelativeLayout>

</LinearLayout>